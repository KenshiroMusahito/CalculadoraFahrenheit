<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.meuprojeto.fahrenheit.calculadorafahrenheit.Controller">
    <children>
        <TextField fx:id="celsiusInput" promptText="Digite a temperatura em Celsius" />
        <Button fx:id="convertButton" mnemonicParsing="false" onAction="#convertTemperature" text="Converter para Fahrenheit"/>
        <Label fx:id="resultLabel" text="Resultado em Fahrenheit: " />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>
